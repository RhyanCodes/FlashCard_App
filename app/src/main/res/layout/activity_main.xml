<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/parent">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="What is the first element on the periodic table?"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="360dp"
        android:layout_height="157dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f19828"
        android:gravity="center"
        android:text="Helium"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="374dp"
        android:layout_height="96dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:background="#f19828"
        android:gravity="center"
        android:padding="10dp"
        android:text="Carbon"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="369dp"
        android:layout_height="93dp"
        android:layout_below="@+id/flashcard_answer1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#f19828"
        android:gravity="center"
        android:padding="10dp"
        android:text="Helium"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="369dp"
        android:layout_height="93dp"
        android:layout_below="@+id/flashcard_answer2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#f19828"
        android:gravity="center"
        android:padding="10dp"
        android:text="Oxygen"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_iconmonstr_eye_8" />

    <ImageView
        android:id="@+id/toggle_choices_invisibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_iconmonstr_eye_7" />

    <ImageView
        android:id="@+id/add_flashcard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ic_iconmonstr_plus_circle_thin" />
</RelativeLayout>